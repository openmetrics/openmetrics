<%= render 'shared/openmetrics_banner' %>

<div class="front-box">
    <h3><%= t("om.register.greeter") %></h3>
    <%= devise_error_messages! %>

  <table>
    <%= form_for(resource, { as: resource_name, html: {class: 'spacer'}, url: registration_path(resource_name)}) do |f| %>

      <tr>
        <td><%= f.label :username, t('om.register.username') %></td>
        <td><%= f.text_field :username, autofocus: true %></td>
      </tr>

      <tr>
        <td><%= f.label :email, t('om.register.email') %></td>
        <td><%= f.email_field :email %></td>
      </tr>

        <tr>
          <td><%= f.label :password, t('om.register.password') %></td>
            <td><%= f.password_field :password, autocomplete: "off" %></td>
        </tr>

        <tr>
          <td><%= f.label :password_confirmation, t('om.register.password_confirmation') %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
        </tr>


        <tr><td colspan="2"><%= f.submit t('om.register.register') %></td></tr>

        <tr><td colspan="2">
          <div id="devise-links">
            <%= render "devise/shared/links" %>
          </div></td></tr>

    <% end %>

  </table>
</div>