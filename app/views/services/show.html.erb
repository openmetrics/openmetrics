<% content_for :page_header do %>
    <h3>
      <%= badge_label @service, {:label_class => 'primary', :use_base_class => true,
                                 :sub_label => {:label_class => 'info', :text => @service.class.name}} %>
        <span class="btn-group btn-group-sm pull-right">
            <%= link_to t('om.controls.delete_html'), @service, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-default' %>
            <%= link_to t('om.controls.edit_html'), edit_service_path(@service), :class => 'btn btn-default' %>
        </span>
    </h3>
<% end %>

<div class="row">

  <!-- left column -->
  <div class="col-md-6">
    <% if @service.description %>
    <p><blockquote><%=@service.description%></blockquote></p>
    <% end %>
  </div>

  <!-- right column -->
  <div class="col-md-6">
    <h4>Systems running Service</h4>
    <% if @service.systems_running_service.any? %>
        <%= render :partial => 'systems_running_service', :collection => @service.systems_running_service %>
    <% else %>
        None
    <% end %>

  </div>

</div>






