<h4 class="spacer">
  Test Item Browser <i class="fa fa-info-circle" data-tip-pos-my="bottom center" data-tip-pos-at="top center" data-tip-content="Items below can be dragged and dropped to dropzones!"></i>
</h4>

<div class="panel panel-default">
  <div class="panel-body">

    <div class="form-group">
      <input id="searchinput" class="form-control" type="search" placeholder="Filter..." />
    </div>

    <h5>Test Cases</h5>
    <ul id="test_cases_searchlist" class="test_cases_list list-group">
        <% @test_cases.each do |item| %>
          <li class="list-group-item" data-test_case_id="<%= item.id %>">
            <span class="actions pull-right">
              <i class="drag fa fa-arrows"></i>
              <!--<i class="add fa fa-plus" title="Add"></i>-->
            </span>
            <%= link_to badge("TC-#{item.id}", 'primary') + " #{item.name}", item %>
          </li>
        <% end %>
    </ul>


    <h5>Test Scripts</h5>
    <ul id="test_scripts_searchlist" class="test_scripts_list list-group">
      <% @test_scripts.each do |item| %>
          <li class="list-group-item" data-test_script_id="<%= item.id %>">
            <span class="actions pull-right">
                <i class="drag fa fa-arrows"></i>
                <!--<i class="add fa fa-plus" title="Add"></i>-->
            </span>
            <%= link_to badge("TS-#{item.id}", 'primary') + " #{item.name}", item %>
          </li>
      <% end %>
    </ul>

  </div>
</div>