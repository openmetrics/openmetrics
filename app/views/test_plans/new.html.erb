<% javascript 'webtest' %>

<div class="row">

  <div class="col-md-8">
    <h3>Create a new test plan</h3>
    <div class="panel panel-default">
      <div class="panel-body">

        <%= form_tag(new_test_plan_path, method: 'post', class: "form-horizontal", role: 'form') do %>
            <%= raw htmlform_for @test_plan, {:nested => true, :only => [:name, :description, :base_url]} %>

            <div class="form-group">
              <label class="col-md-4 control-label">Test Item Dropzone</label>

              <div class="col-md-8">
                <div class="dropzone">
                    <ol class="test_items list-unstyled circles-list">
                      <li class="placeholder">Drop items here</li>
                    </ol>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-4 control-label"></label>

              <div class="col-md-8">
                <button class="btn btn-default save" type="submit">Create</button>
              </div>
            </div>

            <div id="webtest_test_items">
            </div>

        <% end %>
      </div>
    </div>

  </div>

  <!-- right column-->
  <div class="col-md-4">
    <h3>Test Items</h3>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'test_item_browser' %>
      </div>
    </div>

    <h3>Test Data</h3>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'shared/upload_form' %>
      </div>
    </div>

  </div>



</div>