<% content_for :page_header do %>
  <h3>
    Tests
    <span class="btn-group btn-group-sm pull-right">
      <%= link_to raw('<span class="fa fa-eye"></span> Test Executions'), test_executions_path, class: 'btn btn-default' %></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Test Items', test_items_path %></li>
        <li><%= link_to 'Test Cases', test_cases_path %></li>
        <li><%= link_to 'Test Scripts', test_scripts_path %></li>
      </ul>
    </span>
    <!-- new button -->
    <span class="btn-group btn-group-sm pull-right" style="margin-right: 5px;">
      <%= link_to raw('<span class="fa fa-plus"></span> '+t('om.views.test_plan.index.new_test_plan')), new_test_plan_path, class: 'btn btn-default' %></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to t('om.views.test_plan.index.new_test_case'), new_test_case_path %></li>
        <li><%= link_to t('om.views.test_plan.index.new_test_script'), new_test_script_path %></li>
      </ul>
    </span>
  </h3>
<% end %>

<div class="row">
  <!--left-->
    <div class="col-md-8">
      <h4 class="spacer">Your Test Plans</h4>
      <div class="panel panel-default">
          <div class="panel-body">
            <%= raw htmltable_for @test_plans, { :actions => { :run => true, :show => true} } %>
          </div>
      </div>
    </div>
  <!--right-->
    <div class="col-md-4">
      <h4 class="spacer">Projects</h4>
      <%= render 'shared/test_projects', projects: Project.all %>
      <%= render 'shared/recent_test_executions', test_executions: TestExecution.recent(5) %>

    </div>
</div>



