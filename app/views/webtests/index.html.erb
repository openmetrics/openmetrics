<%# disable_turbolinks! %>
<%# javascript 'webtest' %>

<div class="row">
  <h3>
    Webtests Overview
    <!--subnav-->
    <!-- show button -->
    <div class="btn-group btn-group-sm pull-right">
      <button type="button" class="btn btn-default"><span class="fa fa-eye"></span> Show</button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Test Executions', test_executions_path %></li>
        <li><%= link_to 'Test Cases', test_cases_path %></li>
        <li><%= link_to 'Test Scripts', test_scripts_path %></li>
        <li class="divider"></li>
        <li><a href="#">Separated link</a></li>
      </ul>
    </div>

    <!-- new button -->
    <div class="btn-group btn-group-sm pull-right" style="margin-right: 5px;">
      <button type="button" class="btn btn-default"><span class="fa fa-plus"></span> New</button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to t('om.views.test_plan.index.new_test_plan'),
                        new_test_plan_path %></li>
        <li><%= link_to t('om.views.test_plan.index.new_test_case'),
                                new_test_case_path %></li>
        <li><a href="#">Something else here</a></li>
        <li class="divider"></li>
        <li><a href="#">Separated link</a></li>
      </ul>
    </div>
  </h3>
</div>

<div class="row">

 <div class="col-md-8">

    <h4 class="spacer">Test Plans</h4>
    <%= raw htmltable_for @test_plans, { :actions => { :run => true, :show => true} } %>
    <br>


    </div>

    <div class="col-md-4">
      <%= render partial: 'shared/recent_test_executions' %>

    </div>
</div>



